			<plugin>
				<groupId>org.jasig.maven</groupId>
				<artifactId>maven-notice-plugin</artifactId>
				<version>1.0.6</version>
				<configuration>
					<noticeTemplate>NOTICE.template</noticeTemplate>
					<licenseMapping>
						<param>${mandrel.tools.directory}/license-check/license-mappings.xml</param>
					</licenseMapping>
					<generateChildNotices>false</generateChildNotices>
				</configuration>
				<executions>
					<execution>
						<id>check-license</id>
						<phase>initialize</phase>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>1.8</version>
			</plugin>

			<plugin>
				<groupId>com.mycila</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<header>${mandrel.license.header}</header>
					<headerDefinitions>
						<headerDefinition>${mandrel.license.headerDefinition}</headerDefinition>
					</headerDefinitions>
					<includes>
						<include>src/main/java/io/mandrel/**/*.java</include>
						<include>src/test/java/io/mandrel/**/*.java</include>
					</includes>
				</configuration>
				<executions>
					<execution>
						<id>check-license-headers</id>
						<phase>compile</phase>
						<goals>
							<goal>format</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
